{
    "files.exclude": {
        "**/*.aux": true,
        "**/*.lof": true,
        "**/*.log": true,
        "**/*.lot": true,
        "**/*.fls": true,
        "**/*.out": true,
        "**/*.toc": true,
	"**/*.fmt": true,
	"**/*.fot": true,
	"**/*.cb": true,
	"**/*.cb2": true,
	"**/*.lb": true,
	
	"**/*.bbl": true,
	"**/*.bcf": true,
	"**/*.blg": true,
	
	"**/*.acn": true,
	"**/*.acr": true,
	"**/*.glg": true,
	"**/*.glo": true,
        "**/*.gls": true,
        
        "**/*.hd": true,
        "**/*.ilg": true,
        "**/*.brf" : true
    },
    "[latex]": {
        "editor.wordWrap": "on",
    },
    "[tex]": {
        "editor.wordWrap": "on",
    },
    "workbench.editor.autoLockGroups": {
        "pdf.preview": true
    },
    "files.associations": {
        "*.dtx": "latex",
        "*.ins": "latex",
    },
}
